  <div id="revisarLista"></div>

  <script>
    const palavrasOriginal = [
      { pt: "Eu n√£o estou com fome", en: "I'm not hungry" },
      { pt: "Eles n√£o estavam com sede", en: "They weren't thirsty" },
      { pt: "Ela est√° entediada", en: "She's bored" },
      { pt: "Eles estavam com raiva", en: "They were angry" },
      { pt: "Eu n√£o estou com sede", en: "I'm not thirsty" },
      { pt: "Ele est√° com medo", en: "He's scared" },
      { pt: "Ela n√£o estava em casa", en: "She wasn't at home" },
      { pt: "Eu estava no trabalho", en: "I was at work" },
      { pt: "Eles n√£o est√£o cansados", en: "They're not tired" },
      { pt: "Ele n√£o est√° com raiva", en: "He's not angry" },
      { pt: "Ela est√° com pressa", en: "She's in a hurry" },
      { pt: "Eles n√£o est√£o prontos", en: "They're not ready" },
      { pt: "Eu n√£o estou pronto", en: "I'm not ready" },
      { pt: "Ele est√° ocupado", en: "He's busy" },
      { pt: "Eu n√£o estou com frio", en: "I'm not cold" },
      { pt: "Ele est√° dormindo", en: "He's sleeping" },
      { pt: "Eles est√£o ocupados", en: "They're busy" },
      { pt: "Eles n√£o estavam perdidos", en: "They weren't lost" },
      { pt: "Ela est√° vindo", en: "She's coming" },
      { pt: "Eu n√£o estava perdido", en: "I wasn't lost" },
      { pt: "Ela n√£o estava doente", en: "She wasn't sick" },
      { pt: "Ele √© um professor", en: "He's a teacher" },
      { pt: "Eles est√£o em casa", en: "They're at home" },
      { pt: "Eu sou um estudante", en: "I'm a student" },
      { pt: "Ela est√° cansada", en: "She's tired" },
      { pt: "Eu estava triste", en: "I was sad" },
      { pt: "Eles estavam com fome", en: "They were hungry" },
      { pt: "Ele n√£o est√° feliz", en: "He's not happy" }
    ];

    let palavras = [...palavrasOriginal];
    let revisar = [];
    let indice = 0;
    let tentativas = 0;

    function embaralhar(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
    }

    embaralhar(palavras);

    function mostrarPalavra() {
      document.getElementById("portugues").innerText = palavras[indice].pt;
      document.getElementById("resposta").value = "";
      document.getElementById("mensagem").innerText = "";
      document.getElementById("resposta").focus();
      document.getElementById("ouvirBtn").style.display = "none";
    }

    function verificarResposta() {
      const resposta = document.getElementById("resposta").value.trim().toLowerCase();
      const correta = palavras[indice].en.toLowerCase();

      if (resposta === correta) {
        document.getElementById("mensagem").innerHTML = "<span class='correct'>Correto!</span>";
        document.getElementById("ouvirBtn").style.display = "inline-block";
        setTimeout(() => {
          indice++;
          tentativas = 0;
          if (indice < palavras.length) {
            mostrarPalavra();
          } else {
            mostrarRevisar();
          }
        }, 1000);
      } else {
        tentativas++;
        if (tentativas === 1) {
          document.getElementById("mensagem").innerHTML = "<span class='incorrect'>Tente novamente.</span>";
        } else {
          document.getElementById("mensagem").innerHTML = `<span class='incorrect'>A palavra correta √©: <strong>${correta}</strong></span>`;
          revisar.push(palavras[indice]);
          setTimeout(() => {
            indice++;
            tentativas = 0;
            if (indice < palavras.length) {
              mostrarPalavra();
            } else {
              mostrarRevisar();
            }
          }, 2000);
        }
      }
    }

    function ouvirPalavra() {
      const utterance = new SpeechSynthesisUtterance(palavras[indice].en);
      utterance.lang = "en-US";
      speechSynthesis.speak(utterance);
    }

    function naoLembro() {
      revisar.push(palavras[indice]);
      indice++;
      if (indice < palavras.length) {
        mostrarPalavra();
      } else {
        mostrarRevisar();
      }
    }

    function mostrarRevisar() {
      let html = "<div id='telaFinal'>";
      html += "<h2>Voc√™ completou todas as frases!</h2>";

      if (revisar.length > 0) {
        html += "<h3>Revisar:</h3><ul>";
        revisar.forEach(p => {
          html += `<li>${p.pt} ‚Üí <strong>${p.en}</strong></li>`;
        });
        html += "</ul>";
      } else {
        html += "<p>Parab√©ns, voc√™ n√£o marcou nenhuma frase para revisar!</p>";
      }

      html += `<p><strong>Envie o resultado p/ seu(a) professor(a)</strong></p>`;
      html += "</div>";

      html += `
        <div class="botoes-finais">
          <button onclick="estudarNovamente()">üîÅ Estudar novamente</button>
          ${revisar.length > 0 ? `<button onclick="revisarErros()">üîÅ Revisar o que eu errei</button>` : ''}
        </div>
      `;

      document.querySelector(".card").style.display = "none";
      document.getElementById("revisarLista").innerHTML = html;
    }

    function estudarNovamente() {
      palavras = [...palavrasOriginal];
      revisar = [];
      indice = 0;
      tentativas = 0;
      embaralhar(palavras);
      document.querySelector(".card").style.display = "block";
      document.getElementById("revisarLista").innerHTML = "";
      mostrarPalavra();
    }

    function revisarErros() {
      if (revisar.length > 0) {
        palavras = [...revisar];
        revisar = [];
        indice = 0;
        tentativas = 0;
        embaralhar(palavras);
        document.querySelector(".card").style.display = "block";
        document.getElementById("revisarLista").innerHTML = "";
        mostrarPalavra();
      }
    }

    document.getElementById("resposta").addEventListener("input", function () {
      const resposta = this.value.trim().toLowerCase();
      const correta = palavras[indice].en.toLowerCase();
      if (resposta === correta) {
        document.getElementById("ouvirBtn").style.display = "inline-block";
      }
    });

    document.getElementById("resposta").addEventListener("keydown", function(event) {
      if (event.key === "Enter") {
        verificarResposta();
      }
    });

    mostrarPalavra();
  </script>
